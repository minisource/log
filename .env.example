# Server Configuration
SERVER_PORT=5002

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=log_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=log_db
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_OPEN_CONNS=25
POSTGRES_MAX_IDLE_CONNS=10
POSTGRES_MAX_LIFETIME_MINS=30
POSTGRES_LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Tracing Configuration
TRACING_ENABLED=true
TRACING_ENDPOINT=http://jaeger:4318/v1/traces
TRACING_SAMPLE_RATE=1.0
TRACING_SERVICE_NAME=log-service

# Retention Configuration
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_GB=50
LOG_ARCHIVE_ENABLED=false
LOG_ARCHIVE_PATH=/var/log/archive

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
